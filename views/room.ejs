<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Stream Chat</title>
  <link rel="stylesheet" href="style.css">
  <!-- 延迟引入 socket.io -->
  <script src="/socket.io/socket.io.js"></script>
  <script src="https://unpkg.com/peerjs@1.5.2/dist/peerjs.min.js"></script>
  <script src=" https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js "></script>
  <script>
    // 全局变量
    const WINDOW_ROOM_ID = "<%= roomId %>"
  </script>
</head>
<body>
  <div class="container">
    <div class="container__left">
      <div class="container__videos">
        <div id="video-grid"></div>
      </div>
      <div class="controlbar">
        <div class="controlbar__block">
          <div class="control__button">
            <i class="iconfont icon-video"></i>
            <span>视频</span>
          </div>
          <div class="control__button">
            <i class="iconfont icon-huatong"></i>
            <span>静音</span>
          </div>
        </div>
        <div class="control__block">
          <div class="control__button">
            <i class="iconfont icon-chat"></i>
            <span>聊天室</span>
          </div>
        </div>
        <div class="controlbar__block">
          <div class="control__button">
            <span class="leave-meeting">离开会议</span>
          </div>
        </div>
      </div>
    </div>
    <div class="container__right">
      <div class="chat__header">
        <h6>聊天室</h6>
      </div>
      <div class="chat-window">
        <ul class="chat-messages"></ul>
      </div>
      <div class="input-box">
        <input type="text" id="chat__input" placeholder="友善发言...">
      </div>
    </div>
  </div>
  <script src="index.js"></script>
</body>
</html>